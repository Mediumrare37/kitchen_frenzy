<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Chef's Kitchen Page</h1>
      <% if @kitchens %>
        <% @kitchens.each do |kitchen| %>
          <div class="listing-card">
            <h3><%= kitchen.title %></h3>
            <p><%= kitchen.details %></p>
            <p><strong>Price:</strong> <%= kitchen.price_per_day %></p>
            <%= link_to 'Edit', edit_kitchen_path(kitchen), class: 'btn btn-primary edit-link' %>
            <%= link_to 'Delete', kitchen_path(kitchen), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this kitchen?' }, class: 'btn btn-danger' %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-6 text-right">
      <h1>New Kitchen</h1>
      <%= simple_form_for @kitchen do |f| %>
        <%= f.input :title %>
        <%= f.input :details %>
        <%= f.input :price_per_day %>
        <%= f.input :location %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


<script>
  $(document).ready(function() {
    // Edit link click event handler
    $('.edit-link').click(function(e) {
      e.preventDefault();
      var url = $(this).attr('href');
      $('#editKitchenModal .modal-body').load(url + ' .container');
      $('#editKitchenModal').modal('show');
    });

    // Submit event for the edit kitchen form
    $('#editKitchenModal').on('submit', '#edit-kitchen-form', function(e) {
      e.preventDefault();
      var form = $(this);
      var url = form.attr('action');
      var data = form.serialize();
      $.ajax({
        type: 'PATCH',
        url: url,
        data: data,
        success: function(response) {
          // Handle success response
          $('#editKitchenModal').modal('hide');
          // You may perform additional actions such as updating the kitchen details on the page
        },
        error: function(xhr) {
          // Handle error response
          var errors = xhr.responseJSON.errors;
          // You can display the errors to the user or handle them as needed
        }
      });
    });
  });
</script>
