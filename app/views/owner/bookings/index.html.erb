<div class="container">
  <h1>Bookings Made to Your Kitchens</h1>
  <ul class="nav tabs-underlined" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <span class="nav-link tab-underlined active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending-tab-pane" role="tab" aria-controls="pending-tab-pane" aria-selected="true">Pending</span>
    </li>
    <li class="nav-item" role="presentation">
      <span class="nav-link tab-underlined" id="accepted-tab" data-bs-toggle="tab" data-bs-target="#accepted-tab-pane" role="tab" aria-controls="accepted-tab-pane" aria-selected="false">Accepted</span>
    </li>
    <li class="nav-item" role="presentation">
      <span class="nav-link tab-underlined" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected-tab-pane" role="tab" aria-controls="rejected-tab-pane" aria-selected="false">Rejected</span>
    </li>
    <li class="nav-item" role="presentation">
      <span class="nav-link tab-underlined" id="past-tab" data-bs-toggle="tab" data-bs-target="#past-tab-pane" role="tab" aria-controls="past-tab-pane" aria-selected="false">Past</span>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade py-3 show active" id="pending-tab-pane" role="tabpanel" aria-labelledby="pending-tab" tabindex="0">
      <% @bookings.pending.each do |booking| %>
        <div class="cards-booking">
          <%= render 'owner/bookings/card-booking', booking: booking %>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade py-3" id="accepted-tab-pane" role="tabpanel" aria-labelledby="accepted-tab" tabindex="0">
      <% @bookings.accepted.each do |booking| %>
        <div class="cards-booking">
          <%= render 'owner/bookings/card-booking', booking: booking %>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade py-3" id="rejected-tab-pane" role="tabpanel" aria-labelledby="rejected-tab" tabindex="0">
      <% @bookings.rejected.each do |booking| %>
        <div class="cards-booking">
          <%= render 'owner/bookings/card-booking', booking: booking%>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade py-3" id="past-tab-pane" role="tabpanel" aria-labelledby="past-tab" tabindex="0">
      <% @bookings.past.each do |booking| %>
        <div class="cards-booking">
          <%= render 'owner/bookings/card-booking', booking: booking%>
        </div>
      <% end %>
    </div>
  </div>
</div>
