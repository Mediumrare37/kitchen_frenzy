<div class="card-kitchen">
  <div class="card-image">
    <%= image_tag "kitchen_industrial" %>
    <%= icon("fa-solid", "heart") %>
    <%= link_to "Book this Kitchen", "new", class: "card-image-button button button-primary brown" %>
  </div>
  <div class="card-info">
    <div class="card-info-details">
      <% @kitchens.each do |k| %>
        <h2><%= k.title %></h2>
        <p><%= k.location %></p>
        <h3><%= k.price_per_day %>
      <% end %>
    </div>
    <div class="card-info-rating">
      <%= icon("fa-solid fa-star", "color: #d29a64" ) %>
      <p>4.58</p>
    </div>
  </div>
</div>
