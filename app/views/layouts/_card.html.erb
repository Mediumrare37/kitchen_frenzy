  </div>
  <div class="card-info">
    <div class="card-info-details">
      <div class="card-info-rating">
        <h2><%= kitchen.title %></h2>
        <div class="card-info-icon">
          <%= icon("fa-solid fa-star", "color: #d29a64" ) %>
          <p>4.58</p>
        </div>
      </div>
      <p><%= kitchen.location %></p>
      <h3><strong>â‚¬<%= (kitchen.price_per_day).to_i.to_s %></strong> day</h3>
    </div>
  </div>
  <%= link_to '', kitchen_path(kitchen), class: "card-link" %>
</div>
