<% @kitchens.each do |k| %>
  <div class="card-kitchen">
    <div class="card-image">
      <%= image_tag "kitchen_industrial.jpg" %>
      <%= icon("fa-solid", "heart") %>
      <%= link_to "Book this Kitchen", kitchen_path(k), class: "card-image-button button button-primary brown" %>
    </div>
    <div class="card-info">
      <div class="card-info-details">
        <h2><%= k.title %></h2>
        <p><%= k.location %></p>
        <h3><%= k.price_per_day %>
      </div>
      <div class="card-info-rating">
        <%= icon("fa-solid fa-star", "color: #d29a64" ) %>
        <p>4.58</p>
      </div>
    </div>
  </div>
<% end %>
